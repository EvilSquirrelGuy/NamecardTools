{
  "name": "namecardtools",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.2.4",
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "concurrently -n api,web -c magenta,cyan \"bun --cwd=packages/api run dev\" \"bun --cwd=packages/web run dev\"",
    "build": "bunx turbo run build",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.1.2",
    "turbo": "^2.5.3"
  },
  "peerDependencies": {
    "typescript": "^5.x"
  }
}
