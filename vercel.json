{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "apps/web/dist" }
    },
    {
      "src": "apps/api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "apps/api/$1" },
    { "src": "/(.*)", "dest": "apps/web/dist/$1" }
  ]
}
